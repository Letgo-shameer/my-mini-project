<%- include("../layouts/header.ejs") %>

<section class="">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-xl-8 ftco-animate">
                <form action="/placeOrder" class="billing-form" id="billingform" method="post">
                    <h3 class="mb-4 billing-heading">Billing Details</h3>
                    <% if(typeof message !== 'undefined'){%>
                
                        <p class="mt-1 ps-2  text-danger" ><%= message %></p>
                         
                       <%}%>
                    <div class="row align-items-end">
                        <% if(userData[0].address){ %>
                        <div class="col-md-12">
                            <div class="form-group mt-2">
                                <div class="radio border p-3 pb-1" style="border-radius: 8px; line-height:1.2px;">
                                    <label><input type="radio" name="currentAddress" value="currentAddress"> Ship to current address</label>
                                    <p class="mt-2"> <%= userData[0].name %> </p>
                                    <p ><%= userData[0].address %>, <%= userData[0].city %>,<%= userData[0].state %>,<%= userData[0].country %>,<%= userData[0].zip %></p>
                                    <p>Mob:<%= userData[0].mobile %> <span>Email:<%= userData[0].email %>  </span>
                                </div>
                            </div>
                        </div>
                        <% } %> 
                        <div class="col-md-6">
