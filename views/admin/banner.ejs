<%- include("../layouts/adminHeader.ejs") %>

<div class="container mt-5">
    <div class="row bootstrap snippets bootdeys">
        <div class="col-md-8 col-sm-12">
            <div class="comment-wrapper">
                <div class="panel panel-info">
                    <div class="panel-heading text-center">
                        <h3>Banner Management</h3>
                    </div>
                    <div class="panel-body">
                        <% if(typeof message!="undefined"){ %>
                            <p class="text-danger"><%= message %></p>
                            <%}%>
                        <form action="" method="post" enctype="multipart/form-data">
                            <input type="text" name="bannername" placeholder="Banner Name">
                            <input type="file" name="bannerimage" multiple/>
                            <button type="submit" class="btn btn-info mt-3">Upload</button>
                            <hr />
                        </form>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">SI</th>
                                    <th scope="col">Banner Name</th>
                                    <th scope="col">Banner Images</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%
                                if(bannerImg.length>0){
                                    for(let i=0;i<bannerImg.length;i++){
                                        %>
                                        <tr>
                                            <td><%= i+1 %></td>
                                            <td><%= bannerImg[i].bannername%> </td>
                                            <td class="">
                                                <div style="width: 35px; height: 50px;"> 
                                                <img src="/bannerImages/<%= bannerImg[i].bannerimage[0]%>" alt="" class="img-fluid">
                                                <img src="/bannerImages/<%= bannerImg[i].bannerimage[1]%>" alt="" class="img-fluid">
                                                </div>
                                            </td>
                                            <td>
                                                <% if(bannerImg[i].active){ %>
                                                    <a class=" btn btn-success" href="/admin/deleteBanner?id=<%= bannerImg[i]._id %>">Enable</a>
                                                <% }else { %>
                                                    <a class=" btn btn-danger" href="/admin/deleteBanner?id=<%= bannerImg[i]._id %>">Disable</a>
                                                <% } %> 
                        
                                            </td> 
                                        </tr>
                                     <%
                                    }
                                }else{
                                    %>
                                    <tr>
                                        <td colspan="5">Banner not found</td>
                                    </tr>    
                                    <%
                                }
                                %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("../layouts/adminFooter.ejs") %>
