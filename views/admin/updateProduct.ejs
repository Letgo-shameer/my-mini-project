<%- include("../layouts/adminHeader.ejs") %>

<div class="container bootstrap snippets bootdey mt-3 p-5">
    <h1 class="text-primary">Update Product</h1>
    <hr />
    <div class="row">
        <!-- edit form column -->
        <% if(typeof message!="undefined"){ %>
            <p class="text-danger"><%= message %></p>
            <%}%>
        <div class="col-md-9 personal-info">
            <form class="form-horizontal" action="" enctype="multipart/form-data" method="post" role="form">
                <div class="form-group">
                    <label class="col-lg-3 control-label">Update Name</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" value="<%= product[0].name%>" name="name" />
                    </div>  
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Update Price</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" value="<%= product[0].price %>" name="price" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Update Author</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" value=" <%= product[0].author %>" name="author" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Stock</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" value=" <%= product[0].stock %>" name="stock" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Offer</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" value=" <%= product[0].offer %>" name="offer" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Best Seller</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" value=" <%= product[0].bestseller %>" name="bestseller" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Update Description</label>
                    <div class="col-lg-8">
                        <!-- <input class="form-control" type="text" value="<%= product[0].description %>" name="description" /> -->
                        <textarea name="description" class="form-control" cols="30" rows="10"><%= product[0].description %></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Update Category</label>
                    <div class="col-lg-8">
                        <div class="ui-select">
                          <select id="user_time_zone" class="form-control" name="category">
                            <%
                          if(categories.length>0){
                              for(let i=0;i<categories.length;i++){
                                  %>
                                <option value="<%= categories[i].tittle%>"><%= categories[i].tittle%></option>
                          <%
                          }
                          }else{
                            %><p colspan="5">Products not found</p><%
                          }
                          %>
                        </select>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="">
                        <h6>Update Photo</h6>
                        <input type="file" class="form-control" name="image" value=""  /> 
                         <img src="/productImages/<%= product[0].image%>" alt="">     
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary mt-3">Update</button>
                    </div>
                </div>
            </form>  
        </div>
    </div>
</div>
<hr />

<%- include("../layouts/adminFooter.ejs") %>
