<%- include("../layouts/adminHeader.ejs") %>

<link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css">
<hr>
<div class="container bootstrap snippets bootdey">
    <div class="row">
        <div class="col-lg-12">
            <div class="main-box no-header clearfix">
                <div class="main-box-body clearfix">
                    <div class="table-responsive">
                        <h3 class="mt-3" >Order Management</h3>
                        <table class="table user-list">
                            <thead>
                                <tr>
                                <th><span>Order Id</span></th>
                                <th><span>Customer</span></th>
                                <th class="text-center"><span>Created</span></th>
                                <th ><span>Status</span></th>
                                <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(orders.length>0){ %>
                                    <% for(let i=0;i<orders.length;i++){ %> 
                                        <% if(orders[i].isorder==1){%> 
                                <tr>
                                    <td>
                                        <!-- <img src="https://bootdey.com/img/Content/user_1.jpg" alt=""> -->
                                        <!-- <a href="#" class="user-link"></a> -->
                                        <span class="user-subhead"><%= orders[i]._id %> </span>
                                    </td>
                                    <td><%= orders[i].name %> </td>
                                    <td class="text-center">
                                        <span class="label label-default"><%= orders[i].createdAt.toDateString()  %> </span>
                                    </td>
                                    <td>
                                    <form action="/admin/orders?id=<%= orders[i]._id %> " method="post">
                                        <select name="status"  class="border-0 border-primary">
                                            <option ><%= orders[i].status %> </option>
                                            <option >In Progress</option>
                                            <option >Packed</option>
                                            <option >Shipped</option>
                                            <option >Delivered</option>
                                            <option >Canceled</option>
                                        </select>
                                        <input type="hidden" name="orderid" value="<%= orders[i]._id %> ">
                                        <span><button type="submit" class="border border-primary rounded">Update</button></span>
                                    </form>
                                    </td>
                                    <!-- <td style="width: 20%;">
                                        <a href="#" class="table-link text-warning">
                                            <span class="fa-stack">
                                                <i class="fa fa-square fa-stack-2x"></i>
                                                <i class="fa fa-search-plus fa-stack-1x fa-inverse"></i>
                                            </span>
                                        </a>
                                        <a href="#" class="table-link text-info">
                                            <span class="fa-stack">
                                                <i class="fa fa-square fa-stack-2x"></i>
                                                <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                            </span>
                                        </a>
                                        <a href="#" class="table-link danger">
                                            <span class="fa-stack">
                                                <i class="fa fa-square fa-stack-2x"></i>
                                                <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                                            </span>
                                        </a>
                                    </td> -->
                                </tr>
                                <%} %>
                                <%} %>
                                <% }else{ %>
                                    <p>No Orders</p>
                                <% } %>
                            </tbody>
                        </table>
                        <br>
                        <h4 class="text-danger">Orders Cancelled By User</h4>
                        <br>
                        <table class="table user-list">
                            <thead>
                                <tr>
                                <th><span>Order Id</span></th>
                                <th class="text-center"><span>Created</span></th>
                                <th ><span>Status</span></th>
                                <th></th>
                                </tr>
                            </thead>
                            <tbody>
                            <% for(i=0;i<orders.length;i++){ %> 
                                <% if(orders[i].isorder==0){ %>
                                <tr>
                                    <td>
                                        <!-- <img src="https://bootdey.com/img/Content/user_1.jpg" alt=""> -->
                                        <!-- <a href="#" class="user-link"></a> -->
                                        <span class="user-subhead"><%= orders[i]._id %> </span>
                                    </td>
                                    <td class="text-center">
                                        <span class="label label-default"><%= orders[i].createdAt.toDateString()  %> </span>
                                    </td>
                                    <td>
                                        <p>Order Cancelled by <%= orders[i].name%> </p>
                                    </td>
                                    <td style="width: 20%;">
                                        <a href="#" class="table-link danger">
                                            <!-- <span class="fa-stack">
                                                <i class="fa fa-square fa-stack-2x"></i>
                                                <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                                            </span> -->
                                        </a>
                                    </td>
                                </tr>
                                <%} %>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("../layouts/adminFooter.ejs") %>